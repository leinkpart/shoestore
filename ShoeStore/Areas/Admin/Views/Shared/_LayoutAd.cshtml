<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <style>
        /* Sidebar Styles */
        #sidebar {
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            width: 250px;
            background-color: #343a40;
            color: white;
            transition: all 0.3s;
            overflow-y: auto;
            overflow-x: hidden;
            z-index: 1000;
        }

            #sidebar.collapsed {
                width: 60px;
            }

            #sidebar ul {
                list-style: none;
                padding: 0;
                margin: 0;
            }

                #sidebar ul li a {
                    display: flex;
                    align-items: center;
                    padding: 15px;
                    color: white;
                    text-decoration: none;
                    gap: 10px;
                    transition: all 0.3s;
                }

                    #sidebar ul li a:hover {
                        background-color: #495057;
                    }

            #sidebar.collapsed .sidebar-text {
                display: none;
            }

        /* Navbar Styles */
        .navbar {
            position: fixed;
            top: 0;
            left: 250px;
            width: calc(100% - 250px);
            transition: all 0.3s;
            z-index: 999;
        }

        #sidebar.collapsed + .navbar {
            left: 60px;
            width: calc(100% - 60px);
        }

        /* Main Content */
        .content {
            margin-top: 60px; /* Dưới thanh navbar */
            padding: 20px;
            margin-left: 250px;
            transition: all 0.3s;
        }

        #sidebar.collapsed ~ .content {
            margin-left: 60px;
        }

        /* Sidebar Toggle Button */
        #toggleSidebar {
            font-size: 20px;
            background: none;
            border: none;
            color: white;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div id="sidebar">
        <button id="toggleSidebar">
            <i id="toggleIcon" class="bi bi-list"></i>
        </button>
        <ul>
            <li><a href="#"><i class="bi bi-house-door"></i><span class="sidebar-text">Home</span></a></li>
            <li><a href="#"><i class="bi bi-box-seam"></i><span class="sidebar-text">Products</span></a></li>
            <li><a href="#"><i class="bi bi-gear"></i><span class="sidebar-text">Settings</span></a></li>
            <li><a href="#"><i class="bi bi-bar-chart"></i><span class="sidebar-text">Reports</span></a></li>
        </ul>
    </div>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <span class="navbar-brand">Navbar</span>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link" href="#">Logout</a></li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div id="mainContent" class="content">
        @RenderBody()
    </div>

    <script>
        // Toggle Sidebar
        document.getElementById('toggleSidebar').addEventListener('click', function () {
            var sidebar = document.getElementById('sidebar');
            var toggleIcon = document.getElementById('toggleIcon');

            sidebar.classList.toggle('collapsed');

            // Đổi icon toggle
            if (toggleIcon.classList.contains('bi-list')) {
                toggleIcon.classList.remove('bi-list');
                toggleIcon.classList.add('bi-x');
            } else {
                toggleIcon.classList.remove('bi-x');
                toggleIcon.classList.add('bi-list');
            }
        });
    </script>
</body>
</html>
