@{
    Layout = null;
    ViewBag.Title = "Đăng nhập";
}

<!DOCTYPE html>

<html lang="vi">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng nhập</title>
    <!-- Thêm FontAwesome để sử dụng icon -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f2f2f2;
            font-family: Arial, sans-serif;
            background-image: url('https://i.imgur.com/x769mkF.jpeg');
            background-size: cover;
        }

        .login-form {
            background: rgba(75, 75, 75, 0.4); /* Nền gần trong suốt */
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            width: 300px;
            backdrop-filter: blur(10px); /* Làm mờ nền */
        }

            .login-form h2 {
                text-align: center;
                margin-bottom: 20px;
                color: #4CAF50;
            }

        .input-group {
            position: relative;
            margin-bottom: 20px;
        }

            .input-group input {
                width: 91.5%;
                padding: 10px 15px;
                border: 1px solid #ccc;
                border-radius: 5px;
                font-size: 16px;
                background: transparent;
                color: #FBFBFB;
            }

            .input-group label {
                position: absolute;
                left: 15px;
                top: 10px;
                font-size: 14px;
                color: #aaa;
                transition: all 0.3s;
            }

            .input-group input:focus + label, .input-group input:not(:placeholder-shown) + label {
                top: -15px;
                left: 10px;
                font-size: 12px;
                color: #4CAF50;
            }

        .login-form button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
        }

            .login-form button:hover {
                background-color: #45a049;
            }

        .login-form p {
            text-align: center;
            margin-top: 20px;
        }

        .login-form a {
            color: #4CAF50;
            text-decoration: none;
        }

            .login-form a:hover {
                text-decoration: underline;
            }

        .eye-icon {
            position: absolute;
            right: 10px;
            top: 12px;
            cursor: pointer;
        }

        .remember-me {
            display: block;
            margin-top: 10px;
        }

        .error-message {
            margin: 5px;
            font-size: 14px;
            color: red;
        }
    </style>
</head>
<body>
    <div class="login-form">
        <h2>Đăng nhập</h2>
        <span class="text-danger error-message">@TempData["error"]</span>
        <form method="POST" action="/Account/Login">
            <div class="input-group">
                <input type="email" name="email" id="email" placeholder=" " required />
                <label for="email">Email</label>
            </div>

            <div class="input-group">
                <input type="password" name="password" id="password" placeholder=" " required />
                <label for="password">Mật khẩu</label>
                <i class="eye-icon fas fa-eye" id="toggle-password"></i>
            </div>

            <label class="remember-me">
                <input type="checkbox" name="rememberMe" value="true" /> Remember me
            </label>
            <button type="submit">Đăng nhập</button>
        </form>
        <p>Chưa có tài khoản? <a href="/Account/Register">Đăng ký</a></p>
    </div>

    <script>
        // Chức năng hiển thị mật khẩu khi nhấp vào biểu tượng mắt
        const togglePassword = document.getElementById("toggle-password");
        const passwordInput = document.getElementById("password");

        togglePassword.addEventListener("click", function () {
            // Thay đổi loại mật khẩu giữa "password" và "text"
            const type = passwordInput.type === "password" ? "text" : "password";
            passwordInput.type = type;

            // Thay đổi biểu tượng mắt
            if (type === "password") {
                togglePassword.classList.remove("fa-eye-slash");
                togglePassword.classList.add("fa-eye");
            } else {
                togglePassword.classList.remove("fa-eye");
                togglePassword.classList.add("fa-eye-slash");
            }
        });
    </script>
</body>
</html>
